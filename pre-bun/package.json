{
  "name": "plutomi",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/plutomi/plutomi.git",
  "author": "Jose Valerio <contact@josevalerio.com>",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "@types/node": "^18.17.5",
    "nx": "15.8.9",
    "rimraf": "^5.0.1"
  },
  "scripts": {
    "test": "nx run-many -t test --parallel",
    "aws:login": "aws sso login --sso-session=plutomi",
    "dev": "nx run-many -t=dev",
    "build": "nx run-many -t=build",
    "start": "yarn workspace @plutomi/api start",
    "lint": "nx run-many -t=lint --parallel",
    "lint:fix": "nx run-many -t=lint:fix --parallel",
    "tidy": "yarn pretty:fix && yarn lint:fix",
    "spellcheck": "yarn cspell .",
    "deploy:dev": "yarn workspace @plutomi/infra deploy:dev",
    "deploy:stage": "yarn workspace @plutomi/infra deploy:stage",
    "deploy:prod": "yarn workspace @plutomi/infra deploy:prod",
    "loadtest": "yarn artillery run loadtest.yml"
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": {}
}
